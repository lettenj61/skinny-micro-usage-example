<configuration>
    <appender name="default" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
          <pattern>%date %level [%thread] %logger{64} %msg%n</pattern>
        </encoder>
    </appender>
    <logger name="org.fusesource.scalate" level="error"/>
    <root level="info">
        <appender-ref ref="default"/>
    </root>
</configuration>
